{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pathcollab.dev/schemas/overlay-manifest.json",
  "title": "PathCollab Overlay Manifest",
  "description": "Schema for PathCollab overlay manifest files",
  "type": "object",
  "required": ["id", "slide_id", "name", "width", "height", "tile_size", "levels", "format", "classes"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this overlay",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "slide_id": {
      "type": "string",
      "description": "ID of the associated slide",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the overlay",
      "minLength": 1,
      "maxLength": 255
    },
    "width": {
      "type": "integer",
      "description": "Full resolution width in pixels",
      "minimum": 1,
      "maximum": 1000000000
    },
    "height": {
      "type": "integer",
      "description": "Full resolution height in pixels",
      "minimum": 1,
      "maximum": 1000000000
    },
    "tile_size": {
      "type": "integer",
      "description": "Tile dimensions in pixels (must be power of 2)",
      "enum": [128, 256, 512, 1024],
      "default": 256
    },
    "levels": {
      "type": "integer",
      "description": "Number of zoom levels",
      "minimum": 1,
      "maximum": 32
    },
    "format": {
      "type": "string",
      "description": "Image format for tiles",
      "enum": ["png", "webp"],
      "default": "png"
    },
    "classes": {
      "type": "array",
      "description": "Class definitions for the overlay",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "color"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique class ID (0-255)",
            "minimum": 0,
            "maximum": 255
          },
          "name": {
            "type": "string",
            "description": "Human-readable class name",
            "minLength": 1,
            "maxLength": 64
          },
          "color": {
            "type": "string",
            "description": "Hex color code for UI legend",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "opacity": {
            "type": "number",
            "description": "Default opacity for this class (0-1)",
            "minimum": 0,
            "maximum": 1,
            "default": 1
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of creation",
      "format": "date-time"
    },
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^\\d+\\.\\d+$",
      "default": "1.0"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "id": "overlay-tissue-demo",
      "slide_id": "demo-slide",
      "name": "Tissue Segmentation",
      "width": 100000,
      "height": 80000,
      "tile_size": 256,
      "levels": 10,
      "format": "png",
      "classes": [
        { "id": 0, "name": "Background", "color": "#000000", "opacity": 0 },
        { "id": 1, "name": "Tumor", "color": "#EF4444", "opacity": 0.7 },
        { "id": 2, "name": "Stroma", "color": "#F59E0B", "opacity": 0.7 }
      ],
      "created_at": "2024-01-15T10:30:00Z",
      "version": "1.0"
    }
  ]
}
